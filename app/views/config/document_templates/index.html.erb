<p id="notice"><%= notice %></p>

<h1>Config Document Templates</h1>

<table>
  <thead>
    <tr>
      <th>Document name</th>
      <th>Document type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @config_document_templates.each do |config_document_template| %>
      <tr>
        <td><%= config_document_template.document_name %></td>
        <td><%= config_document_template.document_type %></td>
        <td><%= link_to 'Show', config_document_template %></td>
        <td><%= link_to 'Edit', edit_config_document_template_path(config_document_template) %></td>
        <td><%= link_to 'Destroy', config_document_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

